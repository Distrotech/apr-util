#!/bin/bash

sed -i -e "s/^EXTRA_LDFLAGS.*/& -L\/lib -L\/usr\/lib/" \
       -e "s/^\(LT_LDFLAGS.*= \)/\1--tag=CC/" \
       -e "s/build\/.*\//build\/${1}\//" \
       -e "s/^apr_builddir=.*/apr_builddir=\/build\/${1}\/usr\/build-1/" \
       -e "s/^apr_builders=.*/apr_builders=\/build\/${1}\/usr\/build-1/" \
       -e "s/^top_builddir=.*/top_builddir=\/build\/${1}\/usr\/build-1/" \
       -e "s/^LDFLAGS.*//" \
       -e "s/=\(\/usr\/\/build-1\)/=\/build\/${1}\/\1/" build/rules.mk
sed -i -e "s/^APRUTIL_LDFLAGS .*/APRUTIL_LDFLAGS = -L\/build\/${1}\/usr\/lib -L\/build\/${1}\/usr\/lib/" Makefile
